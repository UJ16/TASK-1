#include <stdio.h>
#include <string.h>

#define NUM_QUESTIONS 5

typedef struct {
    char question[100];
    char options[4][100];
    int correct;
} question;

question quiz[NUM_QUESTIONS] = {
    {"What is the capital of France?", {"Paris", "London", "Berlin", "Rome"}, 0},
    {"What is the largest planet in our solar system?", {"Earth", "Saturn", "Jupiter", "Uranus"}, 2},
    {"What is the smallest country in the world?", {"Vatican City", "Monaco", "Nauru", "Tuvalu"}, 0},
    {"What is the largest living species of lizard?", {"Komodo dragon", "Saltwater crocodile", "Black mamba", "Green anaconda"}, 0},
    {"What is the highest mountain peak in the solar system?", {"Mount Everest", "Olympus Mons", "Mauna Kea", "Denali"}, 1}
};

int main() {
    int score = 0;
    for(int i = 0; i < NUM_QUESTIONS; i++) {
        printf("%s\n", quiz[i].question);
        for(int j = 0; j < 4; j++) {
            printf("%d. %s\n", j + 1, quiz[i].options[j]);
        }
        int answer;
        printf("Enter the number of your answer: ");
        scanf("%d", &answer);
        if(answer - 1 == quiz[i].correct) {
            printf("Correct!\n");
            score++;
        } else {
            printf("Incorrect. The correct answer is %s.\n", quiz[i].options[quiz[i].correct]);
        }
    }
    printf("Your final score is %d out of %d.\n", score, NUM_QUESTIONS);
    return 0;
}
